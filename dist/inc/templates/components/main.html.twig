{# Defaults #}
{% set main_content = main_content|default(page.content) %}

<main id="content" role="main" tabindex="-1"{% if (main_modifier_class) %} class="{{ main_modifier_class }}"{% endif %}>
    <div class="main__container container">
        {% block main_content %}
            {% if (main_content) %}
                {{ include(template_from_string(main_content)) }}
            {% endif %}
        {% endblock %}
    </div>
</main>