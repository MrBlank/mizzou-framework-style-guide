{# Defaults #}
{% set google_analytics_asset_url = google_analytics_asset_url|default(site.asset_url) %}
{% set google_analytics_detected_hostname = google_analytics_detected_hostname|default(site.detected_hostname) %}
{% set google_analytics_hostname = google_analytics_hostname|default(site.hostname) %}

{% if (google_analytics_detected_hostname == google_analytics_hostname) %}
    <script src="{{ google_analytics_asset_url }}js/google-analytics.js"></script>
{% endif %}