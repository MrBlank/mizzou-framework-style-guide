{#
/**
 * Head: Favicon, Apple Touch Icons, Microsoft 8+ Tiles
 *
 * @author Josh Hughes (hughesjd@missouri.edu), Undergraduate Studies, University of Missouri
 * @copyright 2015 Curators of the University of Missouri
 * @version 3.0.0
 *
 * Variables:
 * - icons_apple_mask_icon_color: (string) Color of mask icon for Safari on OS X El Capitan and up (optional, see default).
 * - icons_asset_url: (string) URL of asset directory (CSS, JavaScript, and template images) (optional, see default).
 * - icons_ms_tile_color: (string) Microsoft Windows tile color (see default).
 * - icons_short_name: (string) A short version of the site name (will be used under iOS homescreen icons and Windows 8+ tiles) (see default).
 * - icons_site_icon_color: (string) Color of icons used for Apple and social media uses (see default).
 */
#}
{# Defaults #}
{% set icons_apple_mask_icon_color = icons_apple_mask_icon_color|default(site.apple_mask_icon_color) %}
{% set icons_asset_url = icons_asset_url|default(site.asset_url) %}
{% set icons_ms_tile_color = icons_ms_tile_color|default(site.ms_tile_color) %}
{% set icons_short_name = icons_short_name|default(site.short_name) %}
{% set icons_site_icon_color = icons_site_icon_color|default(site.site_icon_color) %}

{# Favicon #}
<link rel="shortcut icon" href="{{ site.asset_url }}images/favicon.ico" />

{# Apple Touch Icons #}
<meta name="apple-mobile-web-app-title" content="{{ icons_short_name }}" />
<link rel="mask-icon" href="{{ icons_asset_url }}images/apple-pinned-site.svg" color="{{ icons_apple_mask_icon_color }}">
<link rel="apple-touch-icon-precomposed" href="{{ icons_asset_url }}images/site-icon-{{ icons_site_icon_color }}-76x76.png" />
<link rel="apple-touch-icon-precomposed" sizes="120x120" href="{{ icons_asset_url }}images/site-icon-{{ icons_site_icon_color }}-120x120.png" />
<link rel="apple-touch-icon-precomposed" sizes="152x152" href="{{ icons_asset_url }}images/site-icon-{{ icons_site_icon_color }}-152x152.png" />
<link rel="apple-touch-icon-precomposed" sizes="180x180" href="{{ icons_asset_url }}images/site-icon-{{ icons_site_icon_color }}-180x180.png" />

{#  Microsoft Windows 8+ Tiles #}
<meta name="application-name" content="{{ icons_short_name }}" />
<meta name="msapplication-TileImage" content="{{ icons_asset_url }}images/microsoft-pinned-site.png" />
<meta name="msapplication-TileColor" content="{{ icons_ms_tile_color }}" />